<div class="row">
    {{#each stories}}
    <div class="col s12 m6 l4">
        <!-- Promo Content 3 goes here -->
        <div class="row">
            <div class="col 12">
                <div class="card medium">
                    <div class="card-image">
                        <img src="{{this.img}}">
                        <span class="card-title">{{this.title}}</span>
                        {{#if ../currentUser}}
                            {{{editIcon this.author._id ../currentUser._id this._id}}} 
                        {{/if}}
                    </div>
                    <div class="card-content">
                        <p>{{this.body}}</p>
                    </div>
                    <div class="card-action center-align">
                        <div class="chip">
                            <img src="{{this.author.img}}" alt="Contact Person"> {{this.author.firstName}} {{this.lastName}}
                        </div>
                        <a href="/stories/{{this._id}}" class="waves-effect waves-light btn">READ MORE</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{else}}
    <h4>No stories found.</h4>
    {{/each}}
</div>