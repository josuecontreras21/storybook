<h1>Dashboard</h1>
<h4>Your Stories</h4>
<hr class="divider">

<table class="striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Date</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each stories}}
        <tr>
            <td><a href="/stories/{{this._id}}">{{this.title}}</a></td>
            <td>{{this.created}}</td>
            <td>{{this.status}}</td>
            <td><a class="btn" href="/stories/{{this._id}}/edit"><i class="fas fa-pencil-alt"></i> Edit</a> <a class="btn red darken-4" href="#"><i class="fas fa-times"></i> Delete</a></td>
        </tr>
        {{/each}}
    </tbody>
</table>